<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".GeraeteActivity" >

    <TextView
        android:id="@+id/hd_geraete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:text="@string/geraeteanzahl"
        android:textAppearance="?android:attr/textAppearance" />

    <RadioGroup
        android:id="@+id/rg_geraete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/hd_geraete"
        android:layout_below="@+id/hd_geraete"
        android:layout_marginTop="15dp" >

        <RadioButton
            android:id="@+id/rb_eins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/ein_geraet" />

        <RadioButton
            android:id="@+id/rb_mehrere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:enabled="false"
            android:text="@string/mehr_geraete"
            android:textAppearance="?android:attr/textAppearance" />

    </RadioGroup>

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rg_geraete"
        android:layout_below="@+id/rg_geraete"
        android:layout_marginTop="10dp"
        android:text="@string/OK"
        android:textAppearance="?android:attr/textAppearanceButton" />

</RelativeLayout>