<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal">
	
<ImageView
    android:id="@+id/img_gewaehlte_figur"
    android:layout_width="@dimen/width_icon_figur"
    android:layout_height="@dimen/height_icon_figur"
    android:layout_gravity="top"
    android:contentDescription="@string/gewaehlte_figur"
    android:gravity="top" />

<TextView
    android:id="@+id/tv_gewaehlter_name"
    android:layout_width="0dip"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:layout_marginLeft="@dimen/margin_left_icon"
    android:gravity="top" 
    android:textColor="@color/black"
    android:textIsSelectable="true" />

<Button 
    android:id="@+id/btn_spieler_bearbeiten"
    android:src="@drawable/pencil"
    android:layout_width="@dimen/width_button_icon"
    android:layout_height="@dimen/height_button_icon"
    android:gravity="center_vertical" 
/>

<Button
    android:id="@+id/btn_spieler_loeschen"
    android:src="@drawable/loeschen"
    android:layout_width="@dimen/width_button_icon"
    android:layout_height="@dimen/height_button_icon"
    android:layout_marginLeft="@dimen/margin_left_icon"
    android:gravity="center_vertical" 
/>

</LinearLayout>
